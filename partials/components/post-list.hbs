{{!--
    Parameters:
    * feed (index, home, archive, recent)
    * postFeedStyle (list, grid)
    * showTitle (true, false)
    * showSidebar (true, false)
--}}

<section class="gh-container is-{{#match postFeedStyle "List"}}list{{else}}grid{{/match}} gh-outer">
    <div class="gh-container-inner gh-inner">
        
        
            <h2 class="gh-container-title">
                Le ultime di questo mese
            </h2>
        

        <main class="gh-main"> 
            <section class="gh-main-section">


                    {{!-- Homepage --}}
                    {{#match feed "home"}}
                            {{#get "posts" include="authors" limit="4"}}
                                <div class="gh-main-highlight">

                                {{#foreach posts}}
                                    {{#if @first}}
                                                                {{> "post-card-highlight" lazyLoad=true}}

                                    {{else}}
                                    {{/if}}
                                    
                                {{/foreach}}
                                </div>
                                <div class="gh-feed">
                                {{#foreach posts}}
                                    {{#if @first}}
                                    
                                    {{else}}
                                        {{> "post-card" lazyLoad=true}}
                                    {{/if}}
                                    
                                {{/foreach}}
                            </div>
                            {{/get}}

                    {{/match}}

                    


            </section>



            {{!-- All posts --}}
                    {{#match feed "index"}}
                        {{#match pagination.page 2}}
                            {{#get "posts" include="authors" limit=@config.posts_per_page as |recent|}}
                                {{#foreach recent}}
                                    {{> "post-card"}}
                                {{/foreach}}
                            {{/get}}
                        {{/match}}
                        {{#foreach posts}}
                            {{> "post-card" lazyLoad=true}}
                        {{/foreach}}
                    {{/match}}

                    {{!-- Tag and author pages --}}
                    {{#match feed "archive"}}
                        {{#foreach posts}}
                            {{> "post-card" lazyLoad=true}}
                        {{/foreach}}
                    {{/match}}
        </main>


        {{#match pagination.pages ">" 1}}
            <div class="gh-more is-title">
                <a href="{{@site.url}}/page/2">See all {{> "icons/arrow"}}</a>
            </div>
        {{/match}}

    </div>
</section>