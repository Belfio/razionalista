{{!--
    Parameters:
    * feed (index, home, archive, recent)
    * postFeedStyle (list, grid)
    * showTitle (true, false)
    * showSidebar (true, false)
--}}

<section class="gh-container is-{{#match postFeedStyle "List"}}list{{else}}grid{{/match}} gh-outer">
    <div class="gh-container-inner gh-inner">
        <main class="gh-main"> 
                        <h2 class="gh-container-title">
                Le ultime di questo mese
            </h2>
            <section class="gh-main-section">
                    {{!-- Homepage --}}
                    {{#match feed "home"}}
                            {{#get "posts" include="authors" limit="6"}}
                                <div class="gh-main-highlight">

                                {{#foreach posts}}
                                    {{#if @first}}
                                        {{> "post-card-highlight" lazyLoad=true}}

                                    {{else}}
                                    {{/if}}
                                    
                                {{/foreach}}
                                </div>
                                <div class="gh-feed-home">
                                {{#foreach posts}}
                                    {{#if @first}}
                                    
                                    {{else}}
                                        {{> "post-card" lazyLoad=true}}
                                    {{/if}}
                                    
                                {{/foreach}}
                            </div>
                            {{/get}}

                    {{/match}}
                                      

            </section>
